{
  "extends": "../../tsconfig.base.json",
  "include": ["package.json", "src/**/*.ts", "../effect/src/event.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  },
  "references": [
    { "path": "../../alchemy/tsconfig.json" },
    { "path": "../effect/tsconfig.json" }
  ]
}
